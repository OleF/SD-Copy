{
  "$schema": "https://schema.tauri.app/config/2.0",
  "identifier": "default",
  "description": "Default permissions for SD Copy",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:app:default",
    "core:event:default",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-copy-file",
    "fs:allow-read-dir",
    "fs:allow-stat",
    "fs:allow-read-file"
  ],
  "platforms": ["macOS", "windows", "linux"]
}


